#!/bin/bash

# create a new vimrc
cat > .vimrc <<HERE 
" let vim know it's not using system .vimrc
set nocompatible
" set path for .vim folder
set rtp=\$VIMRUNTIME,$(pwd)/.vim,$(pwd)/.vim/bundle/snipmate/after
HERE
cat .vimrc_template >> .vimrc

cat >> ~/.bashrc <<HERE
jff(){
  vimpath=$(which vim)
  alias vim="\$vimpath -u $(pwd)/.vimrc"
  source $(pwd)/.jff
}
HERE
